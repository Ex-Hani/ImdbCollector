<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Imdbcollector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_btn</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Imdbcollector.rounded">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.Imdbcollector.ImageSearchButton">
        <item name="android:background">@color/white</item>
        <item name="android:paddingEnd">@dimen/btn_padding_main</item>
        <item name="android:src">@drawable/ic_baseline_search_24</item>
    </style>

    <style name="Theme.Imdbcollector.ImageFavoriteButton">
        <item name="android:paddingStart">@dimen/btn_padding_main</item>
        <item name="android:background">#80000000</item>
        <item name="android:src">@drawable/ic_baseline_favorite_active</item>
    </style>

    <style name="Theme.Imdbcollector.TitleNameCategory">
        <item name="android:textSize">@dimen/textSize_title_main</item>
        <item name="color">@color/black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:text">@string/TitleNameCategory</item>
    </style>

    <style name="Theme.Imdbcollector.BlackColorTitle">
        <item name="color">@color/black</item>
    </style>

    <style name="Theme.Imdbcollector.EditTextSearch">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:hint">@string/movie_list_hint_search</item>
        <item name="android:background">@color/black_background_list_item</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Theme.Imdbcollector.SearchButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/red_btn</item>
        <item name="android:text">@string/search_btn_text</item>
    </style>

    <style name="Theme.Imdbcollector.TitleMovie">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Imdbcollector.SinposisTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/sinopsis</item>
        <item name="android:paddingTop">@dimen/poster_padding</item>
    </style>

    <style name="Theme.Imdbcollector.Sinposis">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="Theme.Imdbcollector.CurrentMovieText">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">25dp</item>
    </style>
    <style name="Theme.Imdbcollector.Fulltitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.Imdbcollector.FavoriteTitle">
        <item name="android:textSize">@dimen/textSize_title_main</item>
        <item name="color">@color/black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:text">@string/favorite_movie_title</item>
    </style>
    <style name="Theme.Imdbcollector.YearText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Year:</item>
    </style>
    <style name="Theme.Imdbcollector.RatingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Rating:</item>
    </style>
    <style name="Theme.Imdbcollector.CrewText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">Crew:</item>
    </style>
</resources>